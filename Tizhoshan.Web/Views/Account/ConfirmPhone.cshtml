@using Tizhoshan.ServiceLayer.DTOs.AccountViewModels
@model ConfirmPhoneViewModel

@{
    ViewData["Title"] = "تایید حساب کاربری";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================ Login Wrap ================================== -->
<section>
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-7 col-lg-8 col-md-12 col-sm-12">
                <form method="post" action="/ConfirmPhone">
                    <input type="hidden" asp-for="PhoneNumber" value="@ViewBag.phoneNumber" />
                    <div class="crs_log_wrap">
                        <div class="crs_log__thumb">
                            <img src="/themes/skillup/img/banner-2.jpg" class="img-fluid" alt="" />
                        </div>
                        <div class="crs_log__caption">
                            <div class="rcs_log_123">
                                <div class="rcs_ico"><i class="fas fa-lock"></i></div>
                            </div>

                            <div class="rcs_log_124">
                                <div class="Lpo09"><h4>تایید حساب کاربری</h4></div>
                                <div class="form-group">
                                    <label>کد تایید را وارد کنید</label>
                                    <input asp-for="Code" type="text" class="form-control"  />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn full-width btn-md theme-bg text-white">تایید کد</button>
                                </div>
                            </div>
                        </div>
                        <div class="crs_log__footer d-flex justify-content-between">
                            <div class="fhg_45"><p class="musrt">کد تایید برای شما ارسال نشد؟  <a asp-controller="Account" asp-action="RequestAnotherRegisterVerificationCode" asp-route-id="@ViewBag.phoneNumber" class="theme-cl"> ارسال مجدد کد تایید</a></p></div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
<!-- ============================ Login Wrap ================================== -->



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


