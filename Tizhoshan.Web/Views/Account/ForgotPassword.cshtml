@using Tizhoshan.ServiceLayer.DTOs.AccountViewModels
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================ Login Wrap ================================== -->
<section>
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-7 col-lg-8 col-md-12 col-sm-12">
                <form method="post" action="/ForgotPassword">
                    <div class="crs_log_wrap">
                        <div class="crs_log__thumb">
                            <img src="/themes/skillup/img/banner-2.jpg" class="img-fluid" alt="" />
                        </div>
                        <div class="crs_log__caption">
                            <div class="rcs_log_123">
                                <div class="rcs_ico"><i class="fas fa-lock"></i></div>
                            </div>

                            <div class="rcs_log_124">
                                <div class="Lpo09"><h4>فراموشی رمز عبور</h4></div>
                                <div class="form-group">
                                    <label>شماره تلفن همراه خود را وارد کنید</label>
                                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="09123456789" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn full-width btn-md theme-bg text-white">ارسال کد تایید</button>
                                </div>
                            </div>
                        </div>
                        <div class="crs_log__footer d-flex justify-content-between">
                            <div class="fhg_45"><p class="musrt">هنوز ثبت نام نکرده اید؟ <a asp-controller="Account" asp-action="Register" class="theme-cl">ثبت نام</a></p></div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
<!-- ============================ Login Wrap ================================== -->



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

