@using Tizhoshan.ServiceLayer.DTOs.AccountViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "ورود به حساب کاربری";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section>
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-7 col-lg-8 col-md-12 col-sm-12">
                <form method="post" action="/login">
                    <div class="crs_log_wrap">
                        <div class="crs_log__thumb">
                            <img src="/themes/skillup/img/banner-2.jpg" class="img-fluid" alt="" />
                        </div>
                        <div class="crs_log__caption">
                            <div class="rcs_log_123">
                                <div class="rcs_ico"><i class="fas fa-lock"></i></div>
                            </div>

                            <div class="rcs_log_124">
                                <div class="Lpo09">
                                    <h4>ورود به حساب کاربری</h4>
                                </div>
                                <div class="form-group">
                                    <label>شماره تلفن همراه</label>
                                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="09123456789" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>رمز عبور</label>
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-xl-4 col-lg-4 col-4">
                                        <label>مرا به خاطر بسپار</label>
                                        <input asp-for="RememberMe" type="checkbox">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn full-width btn-md theme-bg text-white">ورود</button>
                                </div>
                            </div>
                        </div>
                        <div class="crs_log__footer d-flex justify-content-between mt-0">
                            <div class="fhg_45"><p class="musrt">حساب کاربری ندارید؟ <a asp-controller="Account" asp-action="Register" class="theme-cl">ثبت نام</a></p></div>
                            <div class="fhg_45"><p class="musrt"><a asp-controller="Account" asp-action="ForgotPassword" class="text-danger">رمز عبورم را فراموش کرده ام</a></p></div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}
