<!DOCTYPE html>

<html lang="fa">
<head>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/themes/adomx/images/favicon.ico">

    <!-- CSS
    ============================================ -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/themes/adomx/css/vendor/bootstrap.min.css">

    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="/themes/adomx/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/themes/adomx/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="/themes/adomx/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="/themes/adomx/css/vendor/cryptocurrency-icons.css">

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="/themes/adomx/css/plugins/plugins.css">

    <!-- Helper CSS -->
    <link rel="stylesheet" href="/themes/adomx/css/helper.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="/themes/adomx/css/style.css">

    <!-- Custom Style CSS Only For Demo Purpose -->
    <link id="cus-style" rel="stylesheet" href="/themes/adomx/css/style-primary.css">

    <!-- toastify -->
    <link href="/lib/toastify/toastify.min.css" rel="stylesheet">

</head>
<body dir="rtl" class="skin-dark">


    <!-- site messages -->
    <div>
        <input id="showMessage1" type="hidden" value="@TempData["success"]" />
        <input id="showMessage2" type="hidden" value="@TempData["error"]" />
        <input id="showMessage3" type="hidden" value="@TempData["info"]" />
        <input id="showMessage4" type="hidden" value="@TempData["warning"]" />
    </div>

    <div class="main-wrapper">


        <!-- Header Section Start -->
        <div class="header-section">
            <div class="container-fluid">
                <div class="row justify-content-between align-items-center">

                    <!-- Header Logo (Header Left) Start -->
                    <div class="header-logo col-auto">
                        <a class="text-light" asp-area="AdminPanel" asp-controller="Home" asp-action="Index" style="font-size:x-large;">
                            پنل ادمین تیزهوشان
                        </a>
                    </div><!-- Header Logo (Header Left) End -->
                    <!-- Header Right Start -->
                    <div class="header-right flex-grow-1 col-auto">
                        <div class="row justify-content-between align-items-center">

                            <!-- Side Header Toggle & Search Start -->
                            <div class="col-auto">
                                <div class="row align-items-center">

                                    <!--Side Header Toggle-->
                                    <div class="col-auto"><button class="side-header-toggle"><i class="zmdi zmdi-menu"></i></button></div>

                                    <!--Header Search-->
                                    <div class="col-auto">

                                        <div class="header-search">

                                            <button class="header-search-open d-block d-xl-none"><i class="zmdi zmdi-search"></i></button>

                                        </div>
                                    </div>

                                </div>
                            </div><!-- Side Header Toggle & Search End -->
                            <!-- Header Notifications Area Start -->
                            <div class="col-auto">

                                <ul class="header-notification-area">
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="#">
                                            <span class="user">
                                                <span class="avatar">
                                                    <img src="/themes/adomx/images/avatar/avatar-1.jpg" alt="">
                                                    <span class="status"></span>
                                                </span>
                                                <span class="name">@User.Identity.Name</span>
                                            </span>
                                        </a>

                                        <!-- Dropdown -->
                                        <div class="adomx-dropdown-menu dropdown-menu-user">
                                            <div class="head">
                                                <h5 class="name"><a href="#">@User.Identity.Name</a></h5>
                                            </div>
                                            <div class="body">
                                                <ul>
                                                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Index"><i class="zmdi zmdi-account"></i>پروفایل</a></li>
                                                    <li><a asp-area="" asp-controller="Account" asp-action="SignOut"><i class="zmdi zmdi-lock-open"></i>خروج</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </li>
                                </ul>

                            </div><!-- Header Notifications Area End -->

                        </div>
                    </div><!-- Header Right End -->

                </div>
            </div>
        </div><!-- Header Section End -->
        <!-- Side Header Start -->
        <div class="side-header show">
            <button class="side-header-close"><i class="zmdi zmdi-close"></i></button>
            <!-- Side Header Inner Start -->
            <div class="side-header-inner custom-scroll">

                <nav class="side-header-menu" id="side-header-menu">
                    <ul>
                        <li>
                            <a asp-area="AdminPanel" asp-controller="Home" asp-action="Index"><i class="ti-home"></i> <span>داشبورد</span></a>
                        </li>
                        @*<li>
                                <a href="widgets.html"><i class="ti-palette"></i> <span>ابزارک ها</span></a>
                            </li>*@
                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-package"></i> <span>مدیریت کاربران</span></a>
                            <ul class="side-header-sub-menu">
                                <li><a asp-area="AdminPanel" asp-controller="User" asp-action="UsersList"><span>لیست کاربران</span></a></li>
                            </ul>
                        </li>

                    </ul>
                </nav>

            </div><!-- Side Header Inner End -->
        </div><!-- Side Header End -->

        @RenderBody()

        <!-- Footer Section Start -->
        <div class="footer-section">
            <div class="container-fluid">

                <div class="footer-copyright text-center">
                    <p>اپلیکیشن تحت وب تیزهوشان توسط ابوالفضل برزگر در شهریور 1401 نوشته شده است</p>
                </div>

            </div>
        </div>
        <!-- Footer Section End -->


    </div>

    <!-- JS ============================================ -->
    <!-- Global Vendor, plugins & Activation JS -->
    <script src="/themes/adomx/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="/themes/adomx/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="/themes/adomx/js/vendor/popper.min.js"></script>
    <script src="/themes/adomx/js/vendor/bootstrap.min.js"></script>

    <!-- Toastify -->
    <script src="/lib/toastify/toastify.js"></script>
    <partial name="_SiteMessages" />

    <!--Plugins JS-->
    <script src="/themes/adomx/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/themes/adomx/js/plugins/tippy4.min.js.js"></script>
    <!--Main JS-->
    <script src="/themes/adomx/js/main.js"></script>

    <!-- Plugins & Activation JS For Only This Page -->
    <!--Moment-->
    <script src="/themes/adomx/js/plugins/moment/moment.min.js"></script>

    <!--Daterange Picker-->
    <script src="/themes/adomx/js/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="/themes/adomx/js/plugins/daterangepicker/daterangepicker.active.js"></script>

    <!--Echarts-->
    <script src="/themes/adomx/js/plugins/chartjs/Chart.min.js"></script>
    <script src="/themes/adomx/js/plugins/chartjs/chartjs.active.js"></script>

    <!--VMap-->
    <script src="/themes/adomx/js/plugins/vmap/jquery.vmap.min.js"></script>
    <script src="/themes/adomx/js/plugins/vmap/maps/jquery.vmap.world.js"></script>
    <script src="/themes/adomx/js/plugins/vmap/maps/samples/jquery.vmap.sampledata.js"></script>
    <script src="/themes/adomx/js/plugins/vmap/vmap.active.js"></script>

    @RenderSection("PanelScripts", false)

</body>
</html>
